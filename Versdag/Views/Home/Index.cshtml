@{
    ViewBag.Title = "Suggestion of the day";
}

<div id="bodyContainer" ng-app="VersdagApp">
    <section id="content">
        <div class="container">
            <div class="row">
                <div class="flip-container text-center col-md-12" ng-controller="SuggestionCtrl" ng-init="nextSuggestion()">
                    <div class="front">
                        <p class="lead">{{suggestion}}</p>
                        <p>
                            <button class="btn btn-info btn-lg next option" ng-click="nextSuggestion()" ng-disabled="working">Other Suggestion</button>
                        </p>
                    </div>
                </div> 
            </div>
        </div>
    </section>
</div>

@section scripts { 
    @Scripts.Render("~/Scripts/angular.js")
    @Scripts.Render("~/Scripts/app/suggestioncontroller.js")
}

